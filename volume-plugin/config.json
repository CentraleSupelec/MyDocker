{
  "description": "Plugin to handle volumes with various backends depending on config, local filesystem with directory creation OR rbd",
  "documentation": "https://gitlab-research.centralesupelec.fr/mydocker/mydockervolume",
  "interface": {
    "types": [
      "docker.volumedriver/1.0"
    ],
    "socket": "mydockervolume.sock"
  },
  "entrypoint": [
    "/mydockervolume"
  ],
  "env": [
    {
      "name": "LOG_LEVEL",
      "description": "Logging level ('debug', 'warning'...)",
      "settable": [
        "value"
      ],
      "value": "info"
    },
    {
      "name": "ROOT_DIR",
      "description": "Root directory",
      "settable": [
        "value"
      ],
      "value": "/mnt/volumes"
    },
    {
      "name": "DRIVER_MODE",
      "description": "Mode to run : 'FS' for local volumes in /mnt/mydocker-fs or 'RBD' for Ceph RBD images",
      "settable": [
        "value"
      ],
      "value": "FS"
    },
    {
      "name": "RBD_CONF_DEVICE_MAP_ROOT",
      "settable": [
        "value"
      ]
    },
    {
      "name": "RBD_CONF_POOL",
      "settable": [
        "value"
      ]
    },
    {
      "name": "RBD_CONF_CLUSTER",
      "settable": [
        "value"
      ]
    },
    {
      "name": "RBD_CONF_KEYRING_USER",
      "settable": [
        "value"
      ]
    },
    {
      "name": "MOUNT_OPTIONS",
      "Description": "Options to pass to the mount command",
      "settable": [
        "value"
      ],
      "value": "--options=noatime"
    },
    {
      "name": "VOLUME_MOUNT_MODE",
      "Description": "Mode to set the root mounted directory. No chmod if empty",
      "settable": [
        "value"
      ],
      "value": "777"
    }
  ],
  "linux": {
    "AllowAllDevices": true,
    "capabilities": [
      "CAP_NET_ADMIN",
      "CAP_SYS_ADMIN",
      "CAP_SYS_MODULE"
    ],
    "devices": null
  },
  "mounts": [
    {
      "source": "/lib/modules",
      "destination": "/lib/modules",
      "type": "bind",
      "options": [
        "rbind"
      ]
    },
    {
      "source": "/dev",
      "destination": "/dev",
      "type": "bind",
      "options": [
        "shared",
        "rbind"
      ]
    },
    {
      "name": "cephConf",
      "source": "/etc/ceph",
      "destination": "/etc/ceph",
      "type": "bind",
      "options": [
        "rbind"
      ],
      "settable": [
        "source"
      ]
    },
    {
      "source": "/sys",
      "destination": "/sys",
      "type": "bind",
      "options": [
        "rbind"
      ]
    },
    {
      "name": "rootPath",
      "description":  "Where all volumes will be created",
      "source": "/mnt/mydocker-fs",
      "destination": "/mnt/volumes",
      "type": "bind",
      "options": [
        "rbind"
      ],
      "settable": [
        "source"
      ]
    }
  ],
  "network": {
    "type": "host"
  },
  "propagatedMount": "/mnt/volumes"
}
